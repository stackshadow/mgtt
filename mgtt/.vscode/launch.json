  "version": "0.2.0",
  "configurations": [
    {
      "name": "serve",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "env": {},
      "args": ["--terminal", "-v", "serve", "--url", "tcp://0.0.0.0:8883"]
    },
    {
      "name": "Create Self Signed Certificate",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "env": {},
      "args": ["--terminal", "-v", "create-cert", "--self-signed"]
    },
    {
      "name": "serve - self signed",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "env": {},
      "args": ["--terminal", "-v", "serve", "--url", "tcp://0.0.0.0:8883", "--ca-file", ""]
    },
    {
      "name": "Create CA",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "env": {},
      "args": ["--terminal", "-v", "create-ca"]
    },
    {
      "name": "Server - Cert",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "env": {},
      "args": ["--terminal", "-v", "create-cert" ]
    },
    {
      "name": "Client - Cert",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "env": {},
      "args": [
        "--terminal",
        "-v",
        "create-cert",
        "--cert-file",
        "tls/client.crt",
        "--key-file",
        "tls/client.key"
      ]
    }
  ]
}
