  "version": "0.2.0",
  "configurations": [
    {
      "name": "serve",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/mgtt/main.go",
      "env": {
        "CERT_DNS": "localhost"
      },
      "args": []
    },
    {
      "name": "Create Self Signed Certificate",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/mgtt/main.go",
      "env": {},
      "args": [
        "--terminal",
        "-v",
        "create-cert",
        "--self-signed"
      ]
    },
    {
      "name": "serve - self signed",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/mgtt/main.go",
      "env": {
        "CERT_DNS": "localhost,mqtt.boatup.de",
        "PLUGINS": "auth",
        "AUTH_USERNAME": "admin",
        "AUTH_PASSWORD": "admin",
        "AUTH_ANONYMOUSE": "true",
      },
      "args": [
        "--terminal",
        "-v",
        "--plugins",
        "",
        "serve",
        "--url",
        "tcp://0.0.0.0:8883",
        "--self-signed"
      ]
    },
    {
      "name": "Create CA",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/mgtt/main.go",
      "env": {},
      "args": [
        "--terminal",
        "-v",
        "create-ca"
      ]
    },
    {
      "name": "Server - Cert",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/mgtt/main.go",
      "env": {},
      "args": [
        "--terminal",
        "-v",
        "create-cert"
      ]
    },
    {
      "name": "Client - Cert",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/mgtt/main.go",
      "env": {},
      "args": [
        "--terminal",
        "-v",
        "create-cert",
        "--cert-file",
        "tls/client.crt",
        "--key-file",
        "tls/client.key"
      ]
    }
  ]
}